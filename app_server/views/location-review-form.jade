extends layout

// Review Ooty Plan
block content
  .row.banner
    .col-12
      h1 Review Ooty Plan

  .row
    .col-12.col-md-8
      form(action="/location/review/ooty", method="post", role="form")
        .form-group.row
          label.col-12.col-sm-2.col-form-label(for="name") Name
          .col-12.col-sm-10
            input#name.form-control(type="text", name="name", required="required")
        .form-group.row
          label.col-12.col-sm-2.col-form-label(for="rating") Rating
          .col-12.col-sm-2
            select#rating.form-control(name="rating", required="required")
              option(value="5") 5
              option(value="4") 4
              option(value="3") 3
              option(value="2") 2
              option(value="1") 1
        .form-group.row
          label.col-12.col-sm-2.col-form-label(for="review") Review
          .col-12.col-sm-10
            textarea#review.form-control(name="review", rows="5", required="required")
        button.btn.btn-primary.float-right(type="submit") Add my review

    .col-12.col-md-4

